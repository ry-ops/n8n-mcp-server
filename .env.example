# n8n MCP Server Configuration

# n8n Instance URL
# Default: http://localhost:5678
# Set this to your n8n instance URL
N8N_URL=http://localhost:5678

# n8n API Key
# REQUIRED: Get this from your n8n Settings > API > Create API Key
# IMPORTANT: Never commit your actual API key to version control!
N8N_API_KEY=your_api_key_here

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Request timeout in seconds
# Default: 30
# Increase for long-running workflows
N8N_TIMEOUT=30

# SSL/TLS Configuration
# Set to false ONLY for development with self-signed certificates
# NEVER disable in production!
# Default: true
N8N_VERIFY_SSL=true

# Retry Configuration
# Maximum number of retry attempts for failed requests
# Default: 3
# Retries apply to: connection errors, 429 (rate limit), 500, 502, 503, 504
# Does NOT retry: 400, 401, 403, 404 (client errors)
# Backoff strategy: exponential (1s, 2s, 4s, 8s max)
N8N_MAX_RETRIES=3
